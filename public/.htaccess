# ------------------------------------------
# ✅ Force HTTPS and WWW consistency
# ------------------------------------------
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force www - Primary URL: https://www.kortechservice.com/
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [L,R=301]

# ------------------------------------------
# ✅ 301 Redirects for Clean URLs
# ------------------------------------------
# Redirect old .shtml URLs to clean slugs
RewriteRule ^computer-repair\.shtml$ /services [R=301,L]
RewriteRule ^data-recovery\.shtml$ /data-recovery [R=301,L]
RewriteRule ^xbox-hdmi-repair\.shtml$ /xbox-hdmi-repair [R=301,L]
RewriteRule ^ps5-hdmi-repair\.shtml$ /ps5-hdmi-repair [R=301,L]
RewriteRule ^printer-router-repair\.shtml$ /printer-router-repair [R=301,L]
RewriteRule ^custom-gaming-pc\.shtml$ /custom-gaming-pc [R=301,L]
RewriteRule ^charlotte\.shtml$ /charlotte-computer-repair [R=301,L]
RewriteRule ^matthews\.shtml$ /matthews-computer-repair [R=301,L]
RewriteRule ^mint-hill\.shtml$ /mint-hill-computer-repair [R=301,L]
RewriteRule ^indian-trail\.shtml$ /indian-trail-computer-repair [R=301,L]
RewriteRule ^waxhaw\.shtml$ /locations/waxhaw [R=301,L]
RewriteRule ^pineville\.shtml$ /locations/pineville [R=301,L]
RewriteRule ^ballantyne\.shtml$ /locations/ballantyne [R=301,L]

# Redirect duplicate URLs to canonical versions
RewriteRule ^computer-repair-charlotte/?$ /charlotte-computer-repair [R=301,L]
RewriteRule ^computer-repair-matthews/?$ /matthews-computer-repair [R=301,L]
RewriteRule ^computer-repair-mint-hill/?$ /mint-hill-computer-repair [R=301,L]
RewriteRule ^computer-repair-indian-trail/?$ /indian-trail-computer-repair [R=301,L]

# ------------------------------------------
# ✅ React Router / SPA Support
# ------------------------------------------
# Prevent fallback for file types
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|svg|webp|avif|woff|woff2|ttf|eot|ico|json|txt|xml|pdf|zip)$
RewriteRule ^ index.html [L]

# ------------------------------------------
# ✅ GZIP Compression
# ------------------------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/atom+xml
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
  AddOutputFilterByType DEFLATE image/webp
  AddOutputFilterByType DEFLATE image/avif
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ------------------------------------------
# ✅ Browser Caching
# ------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/html "access plus 1 day"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/jpeg "access plus 3 years"
  ExpiresByType image/jpg "access plus 3 years"
  ExpiresByType image/png "access plus 3 years"
  ExpiresByType image/gif "access plus 3 years"
  ExpiresByType image/webp "access plus 3 years"
  ExpiresByType image/avif "access plus 3 years"
  ExpiresByType image/svg+xml "access plus 3 years"
  ExpiresByType image/ico "access plus 3 years"
  ExpiresByType image/x-icon "access plus 3 years"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ------------------------------------------
# ✅ Cache Control Headers
# ------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico|css|js|woff|woff2)$">
    Header set Cache-Control "public, max-age=63072000, immutable"
  </FilesMatch>
  
  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>
  
  # Specific image caching
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico)$">
    Header set Cache-Control "public, max-age=94608000, immutable"
    Header set Expires "Thu, 31 Dec 2027 23:59:59 GMT"
  </FilesMatch>
  
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico|x-icon)$">
    Header set Cache-Control "public, max-age=94608000, immutable"
    Header set Expires "Thu, 31 Dec 2027 23:59:59 GMT"
  </FilesMatch>
</IfModule>

# ------------------------------------------
# ✅ Security Headers
# ------------------------------------------
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ------------------------------------------
# ✅ Disable Directory Listing
# ------------------------------------------
Options -Indexes

# ------------------------------------------
# ✅ Prevent Access to Sensitive Files
# ------------------------------------------
<FilesMatch "\.(htaccess|htpasswd|env|git|gitignore|DS_Store|ini|log|conf|sql|sh)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# ------------------------------------------
# ✅ Custom 404 Page
# ------------------------------------------
ErrorDocument 404 /404.html